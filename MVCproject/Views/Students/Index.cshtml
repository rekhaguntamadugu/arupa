@model IEnumerable<MVCproject.Models.Student>

@{
    var Courses = (IList<MVCproject.Models.Course>) ViewBag.Courses;
    var CourseStatuses = (IList<SelectListItem>)ViewBag.CourseStatues;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
           Course
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseEnrolledDate)
        </th>
        <th>
          Course Status
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => Courses.Where(c=> c.CourseId == item.CourseId).First().CourseName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CourseEnrolledDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => CourseStatuses.Where(c => c.Value == item.CourseStatus.ToString()).First().Text)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Grade)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Age)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
